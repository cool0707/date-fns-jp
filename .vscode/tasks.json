    "version": "2.0.0",
    "tasks": [
        {
            "label": "Packageスクリプト実行",
            "type": "shell",
            "command": "./scripts/build/package.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Lint実行",
            "type": "shell",
            "command": "pnpm run lint",
            "group": {
                "kind": "test",
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "単体テスト実行",
            "type": "shell",
            "command": "pnpm vitest run",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        }
        

    ]
}